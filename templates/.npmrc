# npm configuration
# https://docs.npmjs.com/cli/v10/configuring-npm/npmrc

# Registry settings
registry=https://registry.npmjs.org/

# GitHub Packages (uncomment and configure)
# @your-org:registry=https://npm.pkg.github.com
# //npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}

# Scoped package registry (uncomment and configure)
# @company:registry=https://npm.company.com/
# //npm.company.com/:_authToken=${NPM_TOKEN}

# Save settings
save-exact=true

# Engine strictness
engine-strict=true

# Package lock settings
package-lock=true

# Audit settings
audit=true
audit-level=moderate

# Install settings
legacy-peer-deps=false
strict-peer-deps=false

# Progress bar
progress=true

# Fund messages (disable in CI)
fund=false

# Update notifier (disable in CI)
update-notifier=false

# Git settings
git-tag-version=true
commit-hooks=true

# Scripts settings
ignore-scripts=false

# Logging
loglevel=warn

# Cache settings (useful for CI)
# cache=/path/to/cache
# prefer-offline=true

# For pnpm (if using pnpm)
# shamefully-hoist=true
# auto-install-peers=true
# strict-peer-dependencies=false
